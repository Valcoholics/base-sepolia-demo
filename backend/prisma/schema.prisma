generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AP721 {
  ap721           String @id
  sender          String
  owner           String
  logic           String
  renderer        String
  factory         String
  createdAt       BigInt
  transactionHash String
  Transaction     Transaction @relation(fields: [transactionHash], references: [transactionHash])
}

model TokenStorage {
  ap721           String
  tokenId         BigInt
  pointer         String
  updatedAt       BigInt
  updatedBy       String
  transactionHash String
  Transaction     Transaction @relation(fields: [transactionHash], references: [transactionHash])

  @@id([ap721, tokenId])
}

model Transaction {
  transactionHash String @id
  eventType       String
  createdAt       BigInt
  ap721           AP721[]
  tokenStorage    TokenStorage[]
}

model Arweave {
  tableName String
  link      String  @id
  timestamp DateTime @default(now())
}


